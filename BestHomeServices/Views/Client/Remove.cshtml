@model SpecialistViewModel

@{
    ViewBag.Title = "Are you sure you want to remove specialist?";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<form asp-action="Remove">
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">      
                <input asp-for="@Model.Id" class="visually-hidden" />
                <div class="card mb-3">
                    <img class="card-img-top" src="@Model.ImageUrl" alt="Specialist Image" />
                    <div class="card-body text-center">
                        <h4 class="card-title">@Model.FirstName @Model.LastName</h4>
                       
                        <p class="card-text">Phone number: @Model.PhoneNumber</p>
                       
                    </div>
                </div>
               
            </div>
            <div class="form-group">
                <input type="submit" value="Remove" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>
