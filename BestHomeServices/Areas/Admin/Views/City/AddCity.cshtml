@model CityFormModel;

@{
    ViewBag.Title = "Add A New City";
}
<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-area="Admin" asp-controller="City" asp-action="AddCity" method="post">
            <div class="mb-3">
                <label asp-for="@Model.Name" class="form-label-add-edit">Title:</label>
                <input asp-for="@Model.Name" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-primary mb-2 w-100 p-3 fw-bold" type="submit" value="Add" />
            </div>
        </form>
    </div>
</div>