@model AddSpecialistFormModel

@{
    ViewBag.Title = "Edit Specialist";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-area="Admin" asp-controller="Specialist" asp-action="EditSpecialist" method="post">

            <div class="mb-3">
                <label asp-for="@Model.FirstName" class="form-label-add-edit">FirstName:</label>
                <input asp-for="@Model.FirstName" class="form-control" aria-required="true" placeholder="@Model.FirstName" />
                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.LastName" class="form-label-add-edit">LastName:</label>
                <input asp-for="@Model.LastName" class="form-control" aria-required="true" placeholder="@Model.LastName" />
                <span asp-validation-for="@Model.LastName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.PhoneNumber" class="form-label-add-edit">PhoneNumber:</label>
                <input asp-for="@Model.PhoneNumber" class="form-control" aria-required="true" placeholder=@Model.PhoneNumber />
                <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Description" class="form-label-add-edit">Description:</label>
                <input asp-for="@Model.Description" class="form-control" aria-required="true" placeholder=@Model.Description />
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.ImageUrl" class="form-label-add-edit">PhoneNumber:</label>
                <input asp-for="@Model.ImageUrl" class="form-control" aria-required="true" placeholder="New Image URL here..." />
                <span asp-validation-for="@Model.ImageUrl" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.CategoryId" class="form-label-add-edit">PhoneNumber:</label>
                <input asp-for="@Model.CategoryId" class="form-control" aria-required="true" placeholder=@Model.CategoryId />
                <span asp-validation-for="@Model.CategoryId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.CityId" class="form-label-add-edit">PhoneNumber:</label>
                <input asp-for="@Model.CityId" class="form-control" aria-required="true" placeholder=@Model.CityId />
                <span asp-validation-for="@Model.CityId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-primary mb-2 w-100 p-3 fw-bold" type="submit" value="Edit" />
            </div>
        </form>
    </div>
</div>